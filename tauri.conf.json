{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OSTK",
  "version": "0.1.0",
  "identifier": "com.junzis.ostk",
  "build": {
    "frontendDist": "web"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "OpenSky Toolkit",
        "width": 800,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src ipc: http://ipc.localhost https:",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
